{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "ES2022",
      "dom",
      "dom.iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "vite/client"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "include": [
    "src/**/*",
    "../client/src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "../client/src/**/*.spec.ts",
    "../client/src/**/*.test.ts"
  ]
}